{
  "name": "@nebulaai/starter-toolkit",
  "version": "1.1.0",
  "description": "Starter toolkit for learning entrepreneurs with more options",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "starter",
    "learning",
    "entrepreneur",
    "toolkit"
  ],
  "author": "NebulaAI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nebulaai/starter-toolkit.git",
    "directory": "packages/starter-toolkit"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "LICENSE",
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts __tests__/**/*.ts",
    "lint:fix": "eslint src/**/*.ts __tests__/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts __tests__/**/*.ts",
    "format:check": "prettier --check src/**/*.ts __tests__/**/*.ts",
    "prepublishOnly": "npm run lint && npm run test && npm run build"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
